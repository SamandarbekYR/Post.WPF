<Window x:Class="Post.Desktop.Windows.Selling"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Post.Desktop.Windows"
        mc:Ignorable="d"
        Title="Selling" Height="768" Width="1366"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize" 
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#bac8dc">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      Margin="10,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Naqd pul"
                                   Style="{DynamicResource MoneyLabel}"/>
                        <Border Margin="0 10 0 0"
                                CornerRadius="12" 
                                Background="White">
                            <StackPanel
                                        Margin="8">
                                <TextBox Style="{DynamicResource MoneyTextBox}"
                                         Text="0">
                                </TextBox>
                                <Border  HorizontalAlignment="Left"
                                         Style="{DynamicResource LoginBorder}"
                                         Width="200"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1"
                      Margin="10,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Style="{DynamicResource MoneyLabel}"
                                   Text="Platik karta"/>
                        <Border Margin="0 10 0 0"
                                CornerRadius="12" 
                                Background="White">
                            <StackPanel Margin="8">
                                <TextBox Style="{DynamicResource MoneyTextBox}"
                                         Text="0">
                                </TextBox>
                                <Border HorizontalAlignment="Left"
                                        Style="{DynamicResource LoginBorder}"
                                        Width="200"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2"
                      Margin="10,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Chegirma"
                                   Style="{DynamicResource MoneyLabel}"/>
                        <Border Margin="0 10 0 0"
                                CornerRadius="12" 
                                Background="White">
                            <StackPanel Margin="8">
                                <TextBox Style="{DynamicResource MoneyTextBox}"
                                         Text="0">
                                </TextBox>
                                <Border HorizontalAlignment="Left"
                                        Style="{DynamicResource LoginBorder}"
                                        Width="200"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="3"
                      Margin="10,0">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Style="{DynamicResource MoneyLabel}"
                                   Text="Summa"/>
                        <Border Margin="0 10 0 0"
                                CornerRadius="12" 
                                Background="White">
                            <StackPanel Margin="8">
                                <TextBox Style="{DynamicResource MoneyTextBox}"
                                         Text="0">
                                </TextBox>
                                <Border HorizontalAlignment="Left"
                                        Style="{DynamicResource LoginBorder}"
                                        Width="200"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
                
        <Grid Grid.Row="1" >
                <Grid Margin="10">
                    <DataGrid Background="#ffffff"
                              AutoGenerateColumns="False"
                              CanUserAddRows="false"
                              CanUserDeleteRows="False"
                              IsReadOnly="True">
                        
                        <DataGrid.Columns>
                            
                            <!--QR-Code-->
                            <DataGridTemplateColumn Width="0.8*">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Shtrix-kod"
                                                   Style="{DynamicResource MoneyLabel}">
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                            </DataGridTemplateColumn>

                            <!--Name-->
                            <DataGridTemplateColumn Width="0.8*">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Nomi"
                                                   Style="{DynamicResource MoneyLabel}">
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                            </DataGridTemplateColumn>

                            <!--Cost-->
                            <DataGridTemplateColumn Width="0.6*">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Narxi"
                                                   Style="{DynamicResource MoneyLabel}">
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                            </DataGridTemplateColumn>

                            <!--Amount-->
                            <DataGridTemplateColumn Width="0.6*">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Miqdor"
                                                   Style="{DynamicResource MoneyLabel}">
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                            </DataGridTemplateColumn>

                            <!--Total price-->
                            <DataGridTemplateColumn Width="0.8*">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="Jami narx"
                                                   Style="{DynamicResource MoneyLabel}">
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                            </DataGridTemplateColumn>

                            <!--Deleted-->
                            <DataGridTemplateColumn Width="0.8*">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="O'chirish"
                                                   Style="{DynamicResource MoneyLabel}">
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Button Padding="2"
                                                    Height="35"
                                                    Width="35"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    Background="Transparent">
                                                <Image Source="/assets/minus.png"/>
                                            </Button>
                                            <TextBlock FontSize="18"
                                                       Margin="15,0"
                                                       Text="{Binding Quantity}">
                                            </TextBlock>
                                            <Button Padding="2"
                                                    Height="35"
                                                    Width="35"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0"
                                                    Background="Transparent">
                                                   <Image Source="/Assets/plus.png"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                        
                        
                        
                    </DataGrid>
                    
                </Grid>
        </Grid>
            <StackPanel Grid.Row="2" Margin="0,10,5,5"
                        Orientation="Horizontal">
                <Button Style="{DynamicResource SellingExitButton}">
                </Button>
                <Button Style="{DynamicResource SellingSettingButton}">
                </Button>
                <Border CornerRadius="6" 
                        Background="White"
                        Height="50"
                        Width="310">
                    <StackPanel Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBox IsReadOnly="True"
                                 Text="UnknownBuyer"
                                 Style="{DynamicResource MoneyTextBox}"
                                 Foreground="#3F51B5">
                        </TextBox>
                    </StackPanel>
                </Border>
                <Button Style="{DynamicResource SellingBuyersButton}">
                </Button>
                <Button Style="{DynamicResource SellingPaymentNationButton}">
                </Button>
            </StackPanel>
        </Grid >

        <Grid Grid.Column="1"
              Background="Transparent">
            <StackPanel Orientation="Vertical">
                <Border CornerRadius="6" 
                        Background="Ivory" Height="70"
                        Margin="15 10">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Background="Transparent">
                        <Image Source="/Assets//Images/user.png" Stretch="Uniform"
                               Height="50"
                               Margin="10 0 5 0"/>
                        <StackPanel Width="250"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Nodirbek Abdulaxadov"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Seller"
                                       FontSize="14"/>
                        </StackPanel>
                        <Button HorizontalAlignment="Left"
                                Style="{DynamicResource LoginShutDownButton}"
                                Click="btnShutDown">
                        </Button>

                    </StackPanel>

                </Border>
                <Grid Height="597"
              Margin="10,10,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.2*"/>
                        <RowDefinition Height="1.2*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border CornerRadius="6" 
                                Margin="5,10"
                                BorderThickness="0"
                                Background="White">
                            <TextBox Margin="5" Style="{DynamicResource SellingEnterTextBox}">
                            </TextBox>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{DynamicResource SellingNumberSeven}">
                            
                        </Button>
                        <Button Grid.Column="1"
                                Style="{DynamicResource SellingNumberEight}">
                        </Button>
                        <Button Grid.Column="2"
                                Style="{DynamicResource SellingNumberNine}">
                        </Button>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{DynamicResource SellingNumberFour}">
                        </Button>
                        <Button Grid.Column="1"
                                Style="{DynamicResource SellingNumberFive}">
                        </Button>
                        <Button Grid.Column="2"
                                Style="{DynamicResource SellingNumberSix}">
                        </Button>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{DynamicResource SellingNumberOne}">
                        </Button>
                        <Button Grid.Column="1"
                                Style="{DynamicResource SellingNumberTwo}">
                        </Button>
                        <Button Grid.Column="2"
                                Style="{DynamicResource SellingNumberThree}">
                        </Button>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{DynamicResource SellingNumberZero}" >
                        </Button>
                        <Button Grid.Column="1"
                                Style="{DynamicResource SellingNumberThreeZero}">
                        </Button>
                        <Button Grid.Column="2"
                                Style="{DynamicResource SellingLeft}">
                        </Button>
                    </Grid>

                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{DynamicResource SellingScanning}">
                        </Button>
                        <Button Grid.Column="1"
                                Style="{DynamicResource SellingSelling}">
                        </Button>

                        <Button Grid.Column="2"
                                Style="{DynamicResource SellingRefresh}">
                        </Button>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Style="{DynamicResource SellingSearch}">
                        </Button>
                        <Button Grid.Column="1"
                                Style="{DynamicResource SellingNation}">
                        </Button>
                        <Button Grid.Column="2"
                                Style="{DynamicResource SellingReturn}">
                        </Button>
                    </Grid>
                </Grid>

            </StackPanel>

            <Grid HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Width="360"
            Margin="5,0,15,10"
            Background="White">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="10,0" Orientation="Vertical">
                        <TextBlock Text="14:13"
                       FontSize="30"
                       x:Name="clock"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"/>
                        <TextBlock Text="3-mart, 2023-yil"
                       FontSize="18"
                       x:Name="date"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
